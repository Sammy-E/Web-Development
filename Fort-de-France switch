const jour = 'lundi';

switch (jour) {
    case 'samedi': // day === 'lundi'
        console.log('Le bateau taxi trois-îlets');
        console.log('Dîner dans un restaurant (le soleil couchant) à la plage de l'Anse Mitan');
        break;
    case 'dimanche':
        console.log('Cathédrale Saint Louis à 10h');
        break;
    case 'lundi': 
        console.log('Le marché couvert de Fort-de-France'); 
        console.log('Distillerie La Favorite 2 - 4'); 
        console.log('Gwa-Gwa Resto');
        break;
    case 'mardi':
        console.log('Pâtisserie Surena');
        console.log('Jardin de Balata 4 - 6'); 
        console.log('Référence snack');
        break;
    case 'mercredi':
        console.log('Pâtisserie Surena'); 
        console.log('Aller à la plage La Française');
        break;
    case 'jeudi':
    case 'vendredi':
        console.log('Rentre bien')
        break;
    default:
        console.log('La date est non valable')
}
